<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Configuration of the Ant build system to generate a Jar file --> 
<project name="MVP" default="CreateJar">
  <!--Maybe put somewhere other than bin to avoid conflicting with eclipse -->
  <!-- Or not? -->
  <target name="compile">
    <mkdir dir="bin"/>
    <javac srcdir="src" destdir="bin"/>
  </target>
  <target name="CreateJar" description="Create Jar file">
  <javac srcdir="src"
	 encoding="UTF-8"
         destdir="bin"
         debug="on"
         source="1.8"
	 />
        <jar jarfile="MVP.jar" basedir="./bin" includes="**/**.class">
  	  <manifest>
  	    <attribute name="Main-Class" value="RunGame"/>
  	    <attribute name="Class-Path" value="./"/>
  	  </manifest>
    	</jar>
  </target>
</project>
